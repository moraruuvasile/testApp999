<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ad_preview_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/adViewPager2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:focusableInTouchMode="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:id="@+id/layoutOfIndicator"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="80"
                android:orientation="horizontal"/>

            <TextView
                android:id="@+id/ad_preview_page_nr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="start"
                android:maxLines="1"
                android:text="No photo"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </LinearLayout>

        <TextView
            android:id="@+id/ad_preview_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="No photo"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


        <com.simpals.map.md.MapMdView
            xmlns:mapbox="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            mapbox:mapbox_cameraTargetLat="47.021"
            mapbox:mapbox_cameraTargetLng="28.843"
            mapbox:mapbox_cameraZoom="11"
            mapbox:mapbox_cameraZoomMax="21"
            mapbox:mapbox_cameraZoomMin="6" />


    </LinearLayout>
</ScrollView>